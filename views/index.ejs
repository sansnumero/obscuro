<!doctype html>
<html lang="en">

	<head>
		<title>Discussion Page</title>
	</head>

	<body>
		<h1>Discussion</h1>
		<div>
			<img src="" width="30" height="30">
			<form action="/comment/create" method="POST">
				<input type="text" placeholder="What are your thoughts?" name="comment_content">
				<button>Comment</button>
			</form>
		</div>
		<hr>
		<div>
			<ul style="list-style-type:none;">
				<% comments.forEach((comment) => { %>
					<li>
						<img src=<%= comment.commentor_avatar_url %> width="30" height="30">
						<p><%= comment.commentor %> - <%= comment.time_since %></p>
						<p><%= comment.content %></p>
						<button type="button">^ Upvote</button>
						<p><%= comment.upvote_count %></p>
					</li>
				<% }) %>
			</ul>
		</div>
	</body>

</html>
