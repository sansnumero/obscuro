<!doctype html>
<html lang="en">

	<head>
		<title>Discussion Page</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	</head>

	<body>
		<div class="container">
			<div class="row">
				<div class="col">
				</div>
				<div class="col-6">
					<h3>Discussion</h3>
					<div class="container">
						<div class="row">
							<div class="col-sm-2">
								<img src="https://image.shutterstock.com/image-photo/san-benedetto-del-tronto-italy-600w-239338216.jpg" width="30" height="30" style="border-radius:50%;margin:25px;";>
							</div>
							<div class="col-md-10">
								<%- include('./partials/comment_form', {parent_id: null}); %>
							</div>
						</div>
					</div>
					<hr>
					<ul style="list-style-type:none;" class="list-group">
						<% comments.forEach((comment) => { %>
							<%- include('./partials/list_item', {comment: comment, parent_id: comment.parent_id}); %>
						<% }) %>
					</ul>
				</div>
				<div class="col">
				</div>
			</div>
		</div>
	</body>
    <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
    <script src="upvote_button.js"></script>
</html>


<script>
	Array.from(document.querySelectorAll("li")).forEach(e => {
		if(e.dataset.parentId !== "") {
			e.prepend("=>"); // signifying that this is a child comment
			console.log("e:", e.dataset.parentId)
			e.style.padding = "50px";
		}
	});
</script>
